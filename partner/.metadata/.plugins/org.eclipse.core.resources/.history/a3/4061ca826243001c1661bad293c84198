package com.example.minam.controller;

import java.util.Collection;
import java.util.Date;
import java.util.concurrent.ConcurrentSkipListMap;
import java.util.concurrent.atomic.AtomicLong;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class EventController {
	public ConcurrentSkipListMap<Long,Event> events = new ConcurrentSkipListMap<Long,Event>();
	
	//id값 생성에 사용할 변수
	public AtomicLong maxId = new AtomicLong();
	
	// 목록조회
	@GetMapping(value = "/events")
	public Collection<Event> getEvents(){
	return events.descendingMap().values();
}
	// 1건 추가
	@PostMapping(value = "/events")
	public Event postEvent(@RequestBody Event event) {
		Long currentId = maxId.incrementAndGet();
		Event eventItem = Event.builder().id(currentId).title(event.getTitle()).description(event.getDescription()).photoUrl(event.getPhotoUrl()).clinic(event.getClinic()).keyword(event.getKeyword()).price(event.getPrice()).memo(event.getMemo()).createdTime(new Date().getTime()).build();
		events.put(currentId, eventItem);
		return eventItem;
	}
}
